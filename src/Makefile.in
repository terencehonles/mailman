# NOTE: Makefile.in is converted into Makefile by the configure script
# in the parent directory.  Once configure has run, you can recreate
# the Makefile by running just config.status.

# Variables set by configure

VERSION=	@VERSION@

prefix=   	@prefix@
exec_prefix=	@exec_prefix@
VPATH=		@srcdir@
srcdir= 	@srcdir@
bindir= 	@bindir@

CC=		@CC@
CHMOD=  	@CHMOD@
INSTALL=	@INSTALL@
PYTHON=  	@PYTHON@

DEFS=   	@DEFS@

# UIDs and GIDs
MAIL_GID=      	@MAIL_GID@
CGI_GID=	@CGI_GID@
#ALIAS_UID=	@ALIAS_UID@
#ALIAS_GID=	@ALIAS_GID@

# Customizable but not set by configure
OPT=		@OPT@
CFLAGS=		$(OPT) $(DEFS)
CGIDIR= 	$(exec_prefix)/cgi-bin
CGIEXT=		@CGIEXT@
MAILDIR=	$(exec_prefix)/mail

SHELL=		/bin/sh

MAIL_FLAGS=	-DMAIL_GID=$(MAIL_GID)

CGI_FLAGS=	-DCGI_GID=$(CGI_GID)

#ALIAS_FLAGS=	-DALIAS_UID=$(ALIAS_UID) \
#		-DALIAS_GID=$(ALIAS_GID)

COMMON_FLAGS=	-DPREFIX="\"$(prefix)\"" \
		-DPYTHON="\"$(PYTHON)\""


# Modes for directories and executables created by the install
# process.  Default to group-writable directories but
# user-only-writable for executables.
DIRMODE=	775
EXEMODE=	755
INSTALL_PROGRAM=$(INSTALL) -m $(EXEMODE)

# Fixed definitions

CGI_PROGS= admin admindb archives edithtml options \
listinfo subscribe roster handle_opts private

MAIL_PROGS= wrapper

#ALIAS_PROGS= addaliases

PROGRAMS= $(CGI_PROGS) $(MAIL_PROGS) $(ALIAS_PROGS)


# Rules

all: $(PROGRAMS)

wrapper: $(srcdir)/mail-wrapper.c common.o
	$(CC) -I. $(MAIL_FLAGS) $(CFLAGS) common.o -o $@ $<

#addaliases: $(srcdir)/alias-wrapper.c common.o
#	$(CC) -I. $(ALIAS_FLAGS) $(CFLAGS) -o $@ $<

$(CGI_PROGS): $(srcdir)/cgi-wrapper.c common.o
	$(CC) -DSCRIPT="\"$@\"" -I. $(CGI_FLAGS) $(CFLAGS) common.o -o $@ $<

common.o: $(srcdir)/common.c $(srcdir)/common.h
	$(CC) -c -I. $(COMMON_FLAGS) $(CFLAGS) $<

install: all
	for f in $(CGI_PROGS); \
	do \
	    exe=$(CGIDIR)/$$f$(CGIEXT); \
	    $(INSTALL_PROGRAM) $$f $$exe; \
	    chmod g+s $$exe; \
	done
	for f in $(MAIL_PROGS); \
	do \
	    $(INSTALL_PROGRAM) $$f $(MAILDIR); \
	    chmod g+s $(MAILDIR)/$$f; \
	done
#	@for f in $(ALIAS_PROGS); \
#	do \
#	    $(INSTALL_PROGRAM) $$f $(bindir) ; \
#	done

clean:
	-@rm *.o
	-@rm -f $(PROGRAMS)

distclean: clean
	-@rm Makefile
