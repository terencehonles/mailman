"""Dump the contents of any Mailman .db file.

These are always marshaled dictionaries.

Usage: %(program)s filename
"""

import sys
import marshal
import pprint

program = sys.argv[0]



def main():
    try:
        filename = sys.argv[1]
    except IndexError:
        print __doc__ % globals()
        sys.exit(1)
    fp = open(filename)
    d = marshal.load(fp)
    fp.close()
    pp = pprint.PrettyPrinter(indent=4)
    pp.pprint(d)

if __name__ == '__main__':
    main()
